<?xml version="1.0" encoding="UTF-8"?>
<extentreports>
    <configuration>
        <!-- report theme -->
        <theme>standard</theme>
        <!-- document encoding -->
        <encoding>UTF-8</encoding>
        <!-- report name - displayed at top-nav -->
        <reportName>TVS Motor Automation Report</reportName>
        <!-- protocol for script and stylesheets -->
        <protocol>https</protocol>
        <!-- enable timeline -->
        <timelineEnabled>true</timelineEnabled>
        <!-- title of the document -->
        <documentTitle>Extent Report</documentTitle>
        <!-- report headline - displayed at top-nav, after reportHeadline -->
        <reportHeadline>Automation Report</reportHeadline>
        <!-- test view chart location -->
        <testViewChartLocation>top</testViewChartLocation>
        <!-- show passed tests -->
        <showPassedTests>true</showPassedTests>
        <!-- show failed tests -->
        <showFailedTests>true</showFailedTests>
        <!-- show skipped tests -->
        <showSkippedTests>true</showSkippedTests>
        <!-- enable timeline -->
        <enableTimeline>true</enableTimeline>
        <!-- global date format override -->
        <dateFormat>yyyy-MM-dd</dateFormat>
        <!-- global time format override -->
        <timeFormat>HH:mm:ss</timeFormat>
        <!-- custom javascript -->
        <scripts>
            <![CDATA[
                $(document).ready(function() {
                    // Custom JS code here
                });
            ]]>
        </scripts>
        <!-- custom styles -->
        <styles>
            <![CDATA[
                /* Custom CSS styles here */
            ]]>
        </styles>
    </configuration>
</extentreports>